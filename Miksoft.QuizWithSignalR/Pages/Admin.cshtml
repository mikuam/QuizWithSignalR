@page
@model AdminModel
@{
    ViewData["Title"] = "Admin";
}

<div class="container">
    <div class="text-center">
        
        <h1 class="display-4">Admin</h1>

        <form method="post">
            <button type="submit" class="btn btn-primary py-3 px-5 mt-3" asp-route-questionNumber="0">Send Test Question</button>
            <button type="submit" class="btn btn-primary py-3 px-5 mt-3" asp-route-questionNumber="1">Send Question 1</button>
            <button type="submit" class="btn btn-primary py-3 px-5 mt-3" asp-route-questionNumber="2">Send Question 2</button>
            <button type="submit" class="btn btn-primary py-3 px-5 mt-3" asp-route-questionNumber="3">Send Question 3</button>
            
            <button type="submit" class="btn btn-primary py-3 px-5 mt-3" asp-page-handler="Clear">Clear</button>
        </form>

    </div>
</div>